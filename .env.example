# =============================================================
# GovHRPub — Variáveis de Ambiente
# Copie para .env e preencha os valores reais
# NUNCA comite o .env no repositório
# =============================================================

NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Banco de Dados
DATABASE_URL="mysql://USER:PASSWORD@HOST:3306/govrh_db"

# JWT
JWT_SECRET=sua_chave_secreta_muito_longa_minimo_64_chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=outra_chave_diferente_para_refresh_token
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_AUTH_MAX=10

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3001

# Upload
UPLOAD_MAX_SIZE_MB=10
UPLOAD_DEST=./uploads

# Email (Nodemailer)
SMTP_HOST=smtp.seuprovedor.com.br
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@seudominio.gov.br
SMTP_PASS=senha_smtp
EMAIL_FROM="GovHRPub <noreply@seudominio.gov.br>"

# MFA
MFA_ISSUER=GovHRPub

# Logs
LOG_LEVEL=info
LOG_DIR=./logs

# Cron Jobs
CRON_PROGRESSAO_CHECK=0 7 1 * *
CRON_FERIAS_VENCENDO=0 8 * * 1
CRON_TRANSPARENCIA=0 5 2 * *
